# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.{json,yaml,yml}]
indent_size = 2

[*.py]
# same as `black`, supports editor wrapping
max_line_length = 88
